<div class="wrapper" style="width: 40% !important;">
    <div class="col-md-2 mt-2 d-md-block d-none" width="40%">
        <div class="row">
            <form [formGroup]="homeForm" (ngSubmit)="onSubmit(homeForm.value)">
 
                <div class="col-md-8"><h3 class="text-center">Weather Report</h3></div><br/>  
                <div class="form-group">             
                    <input class="form-control" id="city" formControlName="city" name="city" type="text" placeholder="Enter a City"/><br/> 
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-md">Submit</button>
                </div>
                <div class="row">
                    <!-- %for(let i=0; i<result.list.length;i++){% -->
                        <div class="card col-md-2">
                            <div class="row">
                                <img class="card-img-top" src='https://openweathermap.org/img/w/{{result.list[0].weather[0].icon}}.png' alt="weather"/>

                                <span class="topTemp">{{result.list[0].temp.day}}°C</span>
                            </div>
                            <div class="card-body">
                                <span class="max">{{result.list[0].temp_max}}</span>   
                                <span class="min">{{result.list[0].temp.min}}°C</span>
                                <h4 class="card-title">{{result.list[0].weather[0].main}}</h4>
                                <div class="card-text">
                                    <h5 class="day">Date: {{result.list[0].dt | date}} </h5>    
                                    <h5>Humidity:  {{result.list[0].humidiy}}</h5>   
                                </div>
                                {{result}}
                            </div>
                        </div>
                    <!-- %}% -->
                </div>    
                            
    
        </form>
    </div>
</div>
